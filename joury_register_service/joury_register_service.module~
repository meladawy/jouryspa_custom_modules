			if($val == 'on'){
				$keynumber = substr($key,7,2452) ;
				$serviceid[] = $form['#post']['serviceid-'.$keynumber] ; 
				$service_object[] = _get_service_by_id($form['#post']['serviceid-'.$keynumber]) ; 				
				$registerdate[] =$form['#post']['registerdate-'.$keynumber] ;  
