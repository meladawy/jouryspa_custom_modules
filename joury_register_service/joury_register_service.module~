		$clientobj = _get_client_by_id($clientid) ; 
		$clientname = $clientobj->firstname." ".$clientobj->lastname ; 
		$payment_method = $form['#post']['payment-method'] ; 
		$centername = $form['#post']['select-center'] ; 
		$kenetid = $form['#post']['kenet-receipt'] ;
