/**
* Get All Rooms
*/

function _get_all_rooms(){
	$result_handle = db_query("select * from {joury_rooms}") ; 
	while($result_obj = db_fetch_object($result_handle)){
		$result[] = $result_obj->roomname ; 	
	}
	return $result ; 		
}	
