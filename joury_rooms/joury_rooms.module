/**
* Implementation of hook_nodeapi
*/

function joury_rooms_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL){
	switch($op){
			case 'insert' :
			if($node->type == 'rooms'){
				$name = $node->title ; 
				$center = node_load($node->field_roomcenter[0]['nid']) ;
				$nid = $node->nid ; 
				db_query("insert into {joury_rooms} (`center`,`nid` , `roomname`)  values ('%s', %d , '%s')" ,$center->title,  $nid, $name); 
			}		
			break; 		
			
			case 'update' :
			if($node->type == 'rooms'){
				$name = $node->title ; 
				$nid = $node->nid ; 
				$center = node_load($node->field_roomcenter[0]['nid']) ;
				db_query("update  {joury_rooms} set `center` = '%s' ,   `roomname` = '%s'   where `nid` = %d " ,$center->title,   $name ,$nid); 
			}		
			break;
			
			case 'delete' :
			if($node->type == 'rooms'){
				$name = $node->title ; 
				$nid = $node->nid ; 
				db_query("delete from  {joury_rooms} where `nid` = %d " , $nid); 
			}		
			break;
		
		
		}	
}




